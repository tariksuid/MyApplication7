<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >


    <ImageView android:id="@+id/imageView1"
        android:layout_margin="10dp"
        android:onClick="onClickDialog"
        android:layout_row="1"
        android:layout_column="1"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content" android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content"></ImageView>
    <ImageView android:id="@+id/imageView2"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_margin="10dp"
        android:onClick="onClickDialog"
        android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView3" android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onClickDialog"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content"></ImageView>

        <ImageView android:id="@+id/imageView4"
            android:layout_margin="10dp"
            android:onClick="onClickDialog"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_height="wrap_content" android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content">

        </ImageView>
        <ImageView android:id="@+id/imageView5"
            android:onClick="onClickDialog"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView6" android:layout_height="wrap_content"
            android:onClick="onClickDialog"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content"></ImageView>


        <ImageView android:id="@+id/imageView7"
            android:layout_margin="10dp"
            android:onClick="onClickDialog"
            android:layout_row="3"
            android:layout_column="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content" android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView8"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onClickDialog"
            android:layout_row="3"
            android:layout_column="2"
            android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView9"
            android:onClick="onClickDialog"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_row="3"
            android:layout_column="3"
            android:src="@drawable/ic_launcher_background" android:layout_width="wrap_content"></ImageView>
 </GridLayout>